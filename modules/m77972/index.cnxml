	      <entry>0</entry>
	      <entry>0</entry>
	      <entry>2</entry>
	    </row>
	    <row>
	      <entry>B</entry>
	      <entry>1</entry>
	      <entry>0</entry>
	      <entry>1</entry>
	      <entry>1</entry>
	      <entry>0</entry>
	      <entry>0</entry>
	      <entry>0</entry>
	      <entry>0</entry>
	      <entry>0</entry>
	      <entry>0</entry>
	      <entry>3</entry>
	    </row>
	    <row>
	      <entry>C</entry>
	      <entry>1</entry>
	      <entry>1</entry>
	      <entry>1</entry>
	      <entry>1</entry>
	      <entry>1</entry>
	      <entry>1</entry>
	      <entry>1</entry>
	      <entry>0</entry>
	      <entry>0</entry>
	      <entry>0</entry>
	      <entry>7</entry>
	    </row>
	    <row>
	      <entry>D</entry>
	      <entry>1</entry>
	      <entry>1</entry>
	      <entry>1</entry>
	      <entry>1</entry>
